{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended", "schedule:nonOfficeHours"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
   "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
